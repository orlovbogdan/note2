<% unless @root_note %>
<% if params[:note][:parent_note_links_attributes]['0'][:position].to_i - 1 > 0 %>
  $('input[value="<%= params[:authenticity_token] %>').closest('ol').children('li:nth-child(<%= params[:note][:parent_note_links_attributes]['0'][:position].to_i - 1 %>)').after('<li><%=j render 'sub_note', note: @note %></li>')
<% else %>
$('input[value="<%= params[:authenticity_token] %>').closest('ol').prepend('<li><%=j render 'sub_note', note: @note %></li>')
<% end %>
$('input[value="<%= params[:authenticity_token] %>').closest('ol').parent().children('.note').children('.expand_hide').replaceWith('<%=j render 'expand_link', note: @note.parents.last %> ')
<% else %>
 $('#selectable').append('<%=j render @root_note %>');
<% end %>
init_notes();
$('input[value="<%= params[:authenticity_token] %>').closest('form').remove();

